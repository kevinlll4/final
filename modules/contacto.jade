extends ./templates/partials/base.jade

block title
	title Este es contacto
block content

	h1(class="activate") Formulario de contacto
	div(class="row")
		form(class="col s12")
			div(class="row")
				div(class="input-field col s6")
					input(placeholder="Joaquin",id="nombre",type="text",class="validate")
					label(for="nombre") Primer Nombre 
				div(class="input-field col s6")
					input(placeholder="Mendoza",id="apellido",type="text",class="validate")
					label(for="apellido") Apellido 
			div(class="row")
				div(class="input-field col s12")
					textarea(id="comentario",class="materialize-textarea")
					label(for="textarea") Comentario
			button(class="btn waves-effect waves-light",type="submit",name="action")
				Enviar
				i(class="material-icons right") 	send